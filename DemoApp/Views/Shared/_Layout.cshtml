@inject SignInManager<IdentityUser> signInManager;

<html>
<head>
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-expand-md">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a asp-controller="Home" asp-action="Index" class="nav-link">Main page</a>
            </li>
        </ul>
        <ul class="navbar-nav m-lg-auto">
            @if(signInManager.IsSignedIn ( User )) {
                <a asp-controller="Account" asp-action="Logout" class="nav-link">Logout</a>
                <a asp-controller="Account" asp-action="Profile" class="nav-link">@User.Identity.Name </a>

            }
            else {
                <li class="nav-item">
                    <a asp-controller="Account" asp-action="Login" class="nav-link">Login</a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Account" asp-action="Register" class="nav-link">Register</a>
                </li>
            }
        </ul>
        <div>
        </div>
    </nav>
    <div class="container">
        @RenderBody()
    </div>
</body>
</html>
<footer class="bg-light text-center text-lg-start m-3">
    <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
        Copyright© DemoApp, @DateTime.Now.Year. All rights reserved
    </div>
</footer>
