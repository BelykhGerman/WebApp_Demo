@{
    ViewBag.Title = "Login";
}
@model DemoApp.Core.ViewModels.RegisterViewModel
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>

<form asp-controller="Account" asp-action="Login" asp-antiforgery="true">
    <div>
        <p>
            <label asp-for="Email"></label><br>
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"/>
        </p>
        <p>
            <label asp-for="Password"></label><br>
            <input asp-for="Password" />
            <span asp-validation-for="Password" class="text-danger" />
        </p>
        <p>
            <input type="submit" value="Save" />
        </p>
        <br />
        <a asp-controller="Account" asp-action="CreateLogin">Создать новый профиль</a> |
    </div>
</form>
